<Project Sdk="Microsoft.NET.Sdk">
<PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>TheTechIdea.DataManagment_Engine.DataBase</RootNamespace>
 </PropertyGroup>
 <ItemGroup>
		<Compile Include="..\Sqlite\*.cs" />
		<EmbeddedResource Include="..\Sqlite\**\*.resx" />
</ItemGroup>
 <ItemGroup>
   <PackageReference Include="System.Data.SQLite" Version="1.0.113.7" />
 </ItemGroup>
 <ItemGroup>
   <ProjectReference Include="..\DataManagment_Engine\DataManagmentEngine.csproj">
     <Private>false</Private>
   </ProjectReference>
 </ItemGroup>
<Target Name="CopyTarget" AfterTargets="Build">
		<ItemGroup>
			<DataReaders Include="$(TargetDir)\SqliteDatasourceCore.dll" />
		</ItemGroup>
		<Copy SourceFiles="@(DataReaders)" DestinationFolder="$(ProjectDir)..\SampleApp.Core\bin\Debug\net5.0-windows\ProjectClasses" SkipUnchangedFiles="true" />
		<Copy SourceFiles="@(DataReaders)" DestinationFolder="$(ProjectDir)..\SampleApp.Core\bin\Debug\netcoreapp3.1\ProjectClasses" SkipUnchangedFiles="true" />
	</Target>
</Project>
