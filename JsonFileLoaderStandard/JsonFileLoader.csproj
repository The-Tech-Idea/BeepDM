<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>net48;netstandard2.0;net6.0;net7.0</TargetFrameworks>
    <PackageId>TheTechIdea.Beep.JsonLoader</PackageId>
	<Version>1.0.5</Version>
    <Authors>The Tech Idea</Authors>
    <Product>TheTechIdea.Beep.JsonLoader</Product>
    <Description>Component to for Loading and Saving Configuration files in Data Management Engine</Description>
    <Copyright>2022</Copyright>
    <PackageProjectUrl>https://github.com/The-Tech-Idea/BeepDM</PackageProjectUrl>
    <PackageIcon>SimpleODM.png</PackageIcon>
    <RepositoryUrl>https://github.com/The-Tech-Idea/BeepDM</RepositoryUrl>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
   
  </PropertyGroup>
	<Target Name="CopyPackage" AfterTargets="Pack">
		<Copy SourceFiles="$(OutputPath)$(PackageId).$(PackageVersion).nupkg" DestinationFolder="..\..\..\LocalNugetFiles" />
	</Target>
  <ItemGroup>
    <Compile Include="..\JsonFileLoader\CustomContractResolver.cs" Link="CustomContractResolver.cs" />
    <Compile Include="..\JsonFileLoader\JsonFieldsCollector.cs" Link="JsonFieldsCollector.cs" />
    <Compile Include="..\JsonFileLoader\JsonLoader.cs" Link="JsonLoader.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\InstallationScripts\LogoGFx\128\SimpleODM.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementEngine" Version="1.0.162" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementModels" Version="1.0.66" />
  </ItemGroup>

</Project>
