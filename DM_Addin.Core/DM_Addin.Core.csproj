<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Library</OutputType>
		<TargetFramework>net5.0-windows</TargetFramework>
		<UseWindowsForms>true</UseWindowsForms>
		<RootNamespace>TheTechIdea</RootNamespace>
	<GenerateAssemblyInfo>false</GenerateAssemblyInfo>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\DataManagment_Engine\DataManagmentEngine.csproj">
		  <Private>false</Private>
		</ProjectReference>
		<ProjectReference Include="..\WinformCore\WinformCore.csproj">
		  <Private>false</Private>
		</ProjectReference>
	</ItemGroup>
<ItemGroup>
		<Compile Include="..\DM_Addin\**\*.cs" />
		<EmbeddedResource Include="..\DM_Addin\**\*.resx" />
</ItemGroup>
<ItemGroup>
	<Compile Remove="..\DM_Addin\obj\**" />
	<Compile Remove="..\DM_Addin\Properties\**" />
	<EmbeddedResource Remove="..\DM_Addin\Properties\**" />
</ItemGroup>
<ItemGroup>
  <Compile Remove="..\DM_Addin\RDLCReport\DynamicReport1.cs" />
</ItemGroup>
<ItemGroup>
  <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.864.35" />
  <PackageReference Include="ReportViewerCore.WinForms" Version="15.1.13" />
</ItemGroup>
<ItemGroup>
  <Compile Update="Properties\Resources.Designer.cs">
    <DesignTime>True</DesignTime>
    <AutoGen>True</AutoGen>
    <DependentUpon>Resources.resx</DependentUpon>
  </Compile>
</ItemGroup>
<ItemGroup>
  <EmbeddedResource Update="Properties\Resources.resx">
    <Generator>ResXFileCodeGenerator</Generator>
    <LastGenOutput>Resources.Designer.cs</LastGenOutput>
  </EmbeddedResource>
</ItemGroup>
	<Target Name="CopyTarget" AfterTargets="Build">
		<ItemGroup>
			<DataReaders Include="$(TargetDir)\DM_Addin.Core.dll" />
		</ItemGroup>
		<Copy SourceFiles="@(DataReaders)" DestinationFolder="$(ProjectDir)..\SampleApp.Core\bin\Debug\net5.0-windows\Addin" SkipUnchangedFiles="true" />
		<Copy SourceFiles="@(DataReaders)" DestinationFolder="$(ProjectDir)..\SampleApp.Core\bin\Debug\netcoreapp3.1\Addin" SkipUnchangedFiles="true" />
	</Target>
	
</Project>