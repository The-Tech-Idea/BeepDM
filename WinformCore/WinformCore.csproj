<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>TheTechIdea.Winforms.VIS</RootNamespace>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Include="..\WinFormSharedProject\**\*.cs" />
    <EmbeddedResource Include="..\WinFormSharedProject\**\*.resx" />
    <Compile Remove="..\WinFormSharedProject\Tree\**" />
    <Compile Remove="..\WinFormSharedProject\DisplayPanel.cs" />
    <Compile Remove="..\WinFormSharedProject\ITreeEditor.cs" />
    <Compile Remove="..\WinFormSharedProject\TreeEditor_Notused.cs" />
    <ProjectReference Include="..\DataManagment_Engine\DataManagmentEngine.csproj">
      <Private>false</Private>
    </ProjectReference>
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
<Target Name="CopyTarget" AfterTargets="Build">
		<ItemGroup>
			<DataReaders Include="$(TargetDir)\WinformCore.dll" />
		</ItemGroup>
		<!--<Copy SourceFiles="@(DataReaders)" DestinationFolder="$(ProjectDir)..\SampleApp.Core\bin\Debug\net5.0-windows\ProjectClasses" SkipUnchangedFiles="true" />
		<Copy SourceFiles="@(DataReaders)" DestinationFolder="$(ProjectDir)..\SampleApp.Core\bin\Debug\netcoreapp3.1\ProjectClasses" SkipUnchangedFiles="true" />-->
	</Target>
</Project>