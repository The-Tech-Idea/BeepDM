<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFrameworks>netstandard2.0;net6.0;net7.0</TargetFrameworks>
	  <LangVersion>latest</LangVersion>
	  <Nullable>enable</Nullable>
	  <RootNamespace>TheTechIdea.Beep</RootNamespace>
	  <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
	  <PackageId>TheTechIdea.Beep.RDBDataSource</PackageId>
	  <Title></Title>
	  <Authors>The Tech Idea</Authors>
	  <Company>The Tech Idea</Company>
	  <Product>TheTechIdea.Beep.RDBDataSource</Product>
	  <Description>DataSource Component for Reading Relational Database Sources</Description>
	  <Copyright>2023</Copyright>
	  <PackageProjectUrl>https://github.com/The-Tech-Idea/BeepDM</PackageProjectUrl>
	  <PackageIcon>SimpleInfoApps.png</PackageIcon>
	  <RepositoryUrl>https://github.com/The-Tech-Idea/BeepDM</RepositoryUrl>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>
	<Target Name="CopyPackage" AfterTargets="Pack">
		<Copy SourceFiles="$(OutputPath)$(PackageId).$(PackageVersion).nupkg" DestinationFolder="..\..\..\Nuget.Local" />
	</Target>
	<Target Name="PostBuild" AfterTargets="PostBuildEvent">
		<Copy SourceFiles="$(TargetDir)$(MSBuildProjectName).dll" DestinationFolder="$(ProjectDir)..\..\outputDLL\$(PackageId)\$(TargetFramework)" SkipUnchangedFiles="false" />
	</Target>
  <ItemGroup>
    <None Include="..\..\..\..\..\OneDrive\SimpleInfoapps\LogoGFx\128\SimpleInfoApps.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.0.123" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementEngine" Version="1.0.5" />
    <PackageReference Include="TheTechIdea.Beep.DataManagementModels" Version="1.0.8" />
  </ItemGroup>

</Project>
